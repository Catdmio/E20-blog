<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Usuarios</th>
      <th>Email</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.role %></td>
      <td><%= link_to 'Editar', edit_page_path(user), class: 'btn btn-sm btn-success' %></td>
      <% if can? :destroy, user %>
      <td><%= link_to 'Eliminar', page_path(user.id), method: :delete, data: { confirm: 'EstÃ¡s seguro que deseas eliminar el Post?' }, class: 'btn btn-sm btn-danger' %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

